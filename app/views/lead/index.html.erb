<h1 class="page-header">Listing leads</h1>

<div class="well">
<%= link_to 'New Lead', new_api_config_lead_path(@api_config), class: "btn btn-primary"  %>
</div>
<br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Phone</th>
      <th>Company</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.Title %></td>
        <td><%= lead.Phone %></td>
        <td><%= lead.Company %></td>
        <td><%= lead.Email %></td>
        <td><%= lead.FirstName %></td>
        <td><%= lead.LastName %></td>
        <td><%= link_to 'Show', api_config_lead_path(@api_config, lead.Id) %></td>
        <td><%= link_to 'Edit', edit_api_config_lead_path(@api_config, lead.Id) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
